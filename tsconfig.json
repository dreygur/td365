{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "allowJs": false,
    "declaration": true,
    "sourceMap": false,
    "rootDirs": [
      "src",
      "tests"
    ],
    "outDir": "lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    // "noUnusedParameters": true,
    "skipLibCheck": true,
    "pretty": true,
    "lib": [
      "ES2020",
      "DOM"
    ]
  },
  "include": [
    "./src/**/*"
  ]
}